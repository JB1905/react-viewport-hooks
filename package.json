{
  "name": "react-viewport-hooks",
  "version": "1.1.0",
  "description": "Get real viewport width & height",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-viewport-hooks.cjs.js",
  "module": "lib/react-viewport-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "npm run prettier && npm run lint && npm run build",
    "build": "NODE_ENV=production rollup -c",
    "build:dev": "NODE_ENV=development rollup -c",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint 'src/**/*.tsx' --fix",
    "prettier": "prettier --write 'src/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-viewport-hooks.git"
  },
  "keywords": [
    "viewport",
    "hooks",
    "React",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/react-viewport-hooks/issues"
  },
  "homepage": "https://github.com/JB1905/react-viewport-hooks#readme",
  "devDependencies": {
    "@types/react": "^16.8.25",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.1",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx}": [
      "npm run prettier",
      "npm run lint",
      "git add"
    ]
  }
}
