{
  "name": "react-viewport-hooks",
  "version": "1.1.1",
  "description": "Get real viewport width & height",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/react-viewport-hooks.cjs.js",
  "module": "lib/react-viewport-hooks.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint 'src/**/*.tsx' --fix",
    "prettier": "prettier --write 'src/**/*.tsx'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/react-viewport-hooks.git"
  },
  "keywords": ["viewport", "hooks", "React", "library"],
  "bugs": {
    "url": "https://github.com/JB1905/react-viewport-hooks/issues"
  },
  "homepage": "https://github.com/JB1905/react-viewport-hooks#readme",
  "devDependencies": {
    "@types/react": "^16.9.13",
    "@typescript-eslint/parser": "^2.9.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript2": "^0.25.2",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx}": ["npm run prettier", "npm run lint", "git add"]
  }
}
